.row.proximos-viajes
      each viaje in viajes 
        .col-md-6.col-lg-4.mb-4
          .card
            img.card-img-top(src=`img/destinos_${viaje.imagen}.jpg`)
            
            .card-body
              h2= viaje.titulo
              
              // Fecha
              p.d-flex.align-items-center.gap-2.mb-2
                svg(
                  xmlns="http://www.w3.org/2000/svg"
                  width="25"
                  height="25"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="#ff2d55"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                )
                  path(d="M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z")
                  path(d="M16 3v4")
                  path(d="M8 3v4")
                  path(d="M4 11h16")
                  path(d="M7 14h.013")
                  path(d="M10.01 14h.005")
                  path(d="M13.01 14h.005")
                  path(d="M16.015 14h.005")
                  path(d="M13.015 17h.005")
                  path(d="M7.01 17h.005")
                  path(d="M10.01 17h.005")

                | #{viaje.fecha_ida} - #{viaje.fecha_vuelta}

              // Disponibles
              p.d-flex.align-items-center.gap-2
                svg(
                  xmlns="http://www.w3.org/2000/svg"
                  width="25"
                  height="25"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="#ff2d55"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                )
                  path(d="M9 10a3 3 0 1 0 6 0a3 3 0 0 0 -6 0")
                  path(d="M6 21v-1a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v1")
                  path(d="M3 5a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v14a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-14z")

                | #{viaje.disponibles} disponibles

              p= viaje.descripcion.substr(0, 100) + '...'

